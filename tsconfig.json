{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "prismaSettings/*": ["./prisma/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/Toast/constants.js",
    "src/components/Test/__test__/test.test.js",
    "jest.config.js",
    "./jest.setup.ts",
    "src/utils/bounce.js",
    "src/components/AuthNavbar/constants.js",
    "src/test/helpers/render.js",
    "src/components/AuthNavbar/dialogs/index.js"
  ],
  "exclude": ["node_modules"]
}
